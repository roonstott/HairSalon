@{
  Layout = "_Layout";
}

@using HairSalon.Models

@if (Model.Count == 0) 
{
  <p>No Stylists Added Yet</p>
}


  @foreach (Stylist stylist in Model)
  {
    <div class="card">
      <div class="row">
        <div class="col-6">
          <div class="card-body">
            <img class="card-img" src="https://placekitten.com/500/500" alt="Card image cap">
          </div>
        </div>
        <div class="col-6">
          <div class="card-body" id="details">
            <h5 class="card-title">@stylist.FirstName</h5>
            <p class="card-text">@stylist.FirstName @stylist.LastName prefers to be called @stylist.GoesBy. Their specialty is @stylist.Specialty</p>
            @Html.ActionLink("See Full List of Clients", "Details", "Stylists", new {id = stylist.StylistId})
          </div>
        </div>
      </div>
    </div>
    <br>
    <br>
  }
      
      

